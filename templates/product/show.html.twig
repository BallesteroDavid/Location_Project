{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h2>{{ product.name }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Img :</th>
                <td>{{ product.img }}</td>
            </tr>
            <tr>
                <th>Marque :</th>
                <td>{{ product.brand }}</td>
            </tr>
            <tr>
                <th>Decription :</th>
