    <a href="{{ path('app_product_new') }}">Ajouter un produit</a>

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Marque</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
